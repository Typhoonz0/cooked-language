$vars {
    name = 'Liam'
    className = 'container'
    ident = 'main-box'
}

head {
    link rel="stylesheet" href="style.css":
}

body {
    div class=$className [
        div id=$ident [
            h1: 'Hello $name'
            p: 'Welcome to your dashboard.'
            a href='https://google.com': 'Go to google'
        ]
    ]
}